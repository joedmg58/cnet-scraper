<div class="container">

    <!-- Nav Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">

        <a class="navbar-brand" href="/">c|net Scraper</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">

            <ul class="navbar-nav mr-auto">  <!-- put the navbar items inside this unorder list with the class nav-item -->

                <li class="nav-item active">
                    <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/saved">Saved Articles</a>
                </li>

                <li class="nav-item">
                    <a class="btn btn-primary" href="/scrape">SCRAPE NEW ARTICLES !</a>
                </li>
      
            </ul>

            <!--
            <button class="btn btn-primary btn-lg" id="btnScrape">SCRAPE NEW ARTICLES!</button>
            -->

        </div> <!-- end of collapase navbar-collapse -->
    </nav>

    <!-- Jumbotron -->
    <div class="jumbotron jumbotron-fluid bg-info">
        <div class="container">
            <h1 class="display-4 text-center text-light">Mongo Scraper</h1>
            <h2 class="display-6 text-center text-light">c|net edition</h2>
        </div>
    </div>

    <div id="articles-list">

        {{#each articles}}
        <div class="card">
            <div class="card-header">
                <h5 class="card-title"> {{title}} <span id="span{{@index}}" class="badge badge-pill badge-danger">saved</span></h5>
            </div>
            <div class="card-body">
                <p class="card-text">{{text}}</p>
                <a href={{link}} class="btn btn-primary">Go to article</a>
                <button class="btn btn-danger btnSaveArticle" 
                        data-title="{{title}}" 
                        data-text="{{text}}"
                        data-link="{{link}}"
                        data-index={{@index}}
                        >
                        Save article
                </button>
            </div>
        </div>
        {{/each}}

    </div> <!-- end of articles-list -->

</div>